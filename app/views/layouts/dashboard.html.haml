!!!5
%head
  = render :partial => 'layouts/head'
%body
  .row
    .off-canvas-wrap{:'data-offcanvas' => true}
      .inner-wrap
        = render :partial => 'layouts/dash_nav'
        .large-12.columns
          = render :partial => 'layouts/small_nav'
          = if !notice.nil?
            %p.notice= notice
          = if !alert.nil?
            %p.alert= alert
          .not-footer
            = yield
          .footer
            = render :partial => 'layouts/footer'
          .exit-off-canvas

  = javascript_include_tag "app-dash"
  = yield(:js_ext)


