.row.articles
  .large-9.columns
    - @articles.each do |article|
      .row.wrap
        .large-12.columns
          %h3
            = link_to article_path(article.id) do
              = article.name.html_safe
          %p
            = link_to author_path(article.author.id), :class => 'label' do
              = article.author.name.html_safe
          = truncate(article.body, length: 200, escape: false)
      %hr
  .large-3.columns
    = render :partial => 'layouts/sidebar'
