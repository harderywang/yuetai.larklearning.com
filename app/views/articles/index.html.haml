#main-content.articles-wrap.container
  .sidebar.pull-left
    .hot-tags
      %span.label.round 前端
      %span.label.round 后端
      %span.label.round 工具
      %span.label.round 随想
      %span.label.round 游记
      %span.label.round 读书
      %span.label.round 生活
    .hot-authors
      - @authors.each do |author|
        = link_to author do
          - if author.username.blank?
            %span.label.round 匿名
          - else
            %span.label.round= author.username

  #y-articles.articles
    .loading
      %i.fa.fa-spinner.fa-spin

  = render "layouts/pager"

= render "layouts/article"

- blogs_json = render template: "articles/index", formats: [:json], handlers: [:jbuilder]

= content_for :js_ext do
  :javascript
    $(document).ready(function () {
      var blogs_view = new Yuetai.Views.Blogs.BlogsView(#{blogs_json});
    });
    $('.articles-btn').addClass('active');

= content_for :title, '阅台 · 记录想法 分享点滴'
