#main-content
  .row.wrap
    .large-12.columns#blog

- blog_json = render template: "articles/show", formats: [:json], handlers: [:jbuilder]

= content_for :js_ext do
  :javascript
    $(document).ready(function () {
      var blogs_view = new Yuetai.Views.Blogs.BlogView(#{blog_json});
    });
    $('.articles-btn').addClass('active');

%script{type: 'text/template', id: 't-blog-show'}
  .row.article-page
    .large-12.columns
      %h4
        {{= blog.title }}
      %p.name-user-show author: &nbsp; {{= blog.user.username}}
      %p.time-user-show Date: &nbsp; {{= blog.created_at }}
  .row.commentshare   
    .large-12.columns
      %p {{= blog.body }}
      <!-- UY BEGIN -->
      #uyan_frame
      %script{type: 'text/javascript', src:'http://v2.uyan.cc/code/uyan.js?uid=2019932'}
      <!-- UY END -->
