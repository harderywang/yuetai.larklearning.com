.container
  .sidebar.pull-left
    .author-summary
      = link_to @user do
        = image_tag @user.avator
      %h5
        = link_to @user do
          - if @user.username.blank?
            匿名
          - else
            = author.username
      .author-count
        %p
          %span
            文章数
            %strong 12
        %p
          %span
            总字数
            %strong 39
      %p= @user.desc
      .author-links
        = mail_to @user.email do
          %i.fa.fa-envelope
        = link_to @user.github do
          %i.fa.fa-github
        %a.author-webchat{:href => '#'}
          %i.fa.fa-weixin
          = image_tag(@user.webchat)
  .author-articles.articles-wrap
    #y-articles.articles
      .loading
        %i.fa.fa-spinner.fa-spin

  = render "layouts/pager"

= render "layouts/article"

- blogs_json = render template: "users/show", formats: [:json], handlers: [:jbuilder]

= content_for :js_ext do
  :javascript
    $(document).ready(function () {
      var blogs_view = new Yuetai.Views.Blogs.BlogsView(#{blogs_json});
    });
    $('.articles-btn').addClass('active');

= content_for :title, '阅台 · 记录想法 分享点滴'
