%script{type: 'text/template', id: 't-series-show'}
  .row
    .large-12.columns
      %h4 {{= series.title }}
      %p {{= series.body }}
  .row
    .large-12.columns.article-controls
      %a{:href => "#seriess/{{= series.id }}/edit"}
        %i.fa.fa-edit
        编辑
      %a.delete-article
        %i.fa.fa-times-circle-o.delete
        删除
      %a.cancel
        %i.fa.fa-mail-reply
        取消
