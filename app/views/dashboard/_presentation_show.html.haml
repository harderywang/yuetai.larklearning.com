%script{type: 'text/template', id: 't-presentation-show'}
  .row
    .large-12.columns
      %h4 {{= presentation.title }}
  .row
    .large-12.columns
      %ul#show-presentation-pages.large-block-grid-3
  .row
    .large-12.columns.article-controls
      %a{:href => "#presentations/{{= presentation.id }}/edit"}
        %i.fa.fa-edit
        编辑
      %a.delete-article
        %i.fa.fa-times-circle-o.delete
        删除
      %a.cancel
        %i.fa.fa-mail-reply
        取消
