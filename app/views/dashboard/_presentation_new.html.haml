%script{type: 'text/template', id: 't-presentation-new'}
  .row
    .large-12.columns
      %h4 创建演示文稿
  .row
    .large-12.columns
      %form#new-presentation-form
        %input#newpr{type:'hidden', name:'newpr', value:'newpr'}
        .row
          .large-12.columns
            %label
              标题
              %input#presentation-title{type: 'text'}
          .large-12.columns
            %label
              标签
              %input#presentation-tag{type: 'text'}
          .large-12.columns
            %label
              正文
              %textarea#presentation-body{type: 'text'}
          .large-12.columns
            %button.button.tiny{type: 'submit'} 确定
            %a.cancel 取消
