#main-content

  = content_for :js_ext do
    :javascript
      $(document).ready(function () {
        var router = new Yuetai.Routers.Engines();
        Backbone.history.start();
      })

%script{type: 'text/template', id: 't-blogs'}
  %ul#blogs
%script{type: 'text/template', id: 't-blog'}
  %li#blog
    %a{:href => "#blogs/{{= blog.id }}" }
      %h4 {{= blog.title }}
      %p {{= blog.body }}

%script{type: 'text/template', id: 't-blog-show'}
  %h4 {{= blog.title }}
  %p {{= blog.body }}

%script{type: 'text/template', id: 't-series'}
  %ul#series
%script{type: 'text/template', id: 't-series-item'}
  %li#series-item
    %a{:href => "#series/{{= series.id }}" }
      %h4 {{= series.title }}
      %p {{= series.body }}
%script{type: 'text/template', id: 't-series-show'}
  %h4 {{= series.title }}
  %p {{= series.body }}

%script{type: 'text/template', id: 't-presentations'}
  %ul#presentations
%script{type: 'text/template', id: 't-presentation'}
  %a{:href => "#presentations/{{= presentation.id }}" }
    %h4 {{= presentation.title }}
    %p {{= presentation.body }}
%script{type: 'text/template', id: 't-presentation-show'}
  %h4 {{= presentation.title }}
  %p {{= presentation.body }}
