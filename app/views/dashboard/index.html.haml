#main-content
  = content_for :js_ext do
    :javascript
      $(document).ready(function () {
        var router = new Yuetai.Routers.Engines();
        Backbone.history.start();
      })

%script{type: 'text/template', id: 't-blogs'}
  .row
    .large-10.columns
      %h4 所有博客
    .large-2.columns
      %a.button.tiny{:href => "#blogs/new"} 新建
  .row
    .large-12.columns
      %ul#blogs
%script{type: 'text/template', id: 't-blog'}
  %li#blog
    %a{:href => "#blogs/{{= blog.id }}" }
      %h4 {{= blog.title }}
      %p {{= blog.body }}

%script{type: 'text/template', id: 't-blog-show'}
  %h4 {{= blog.title }}
  %p {{= blog.body }}

%script{type: 'text/template', id: 't-blog-new'}
  .row
    .large-12.columns
      %form#new-blog-form
        %input#newbl{type:'hidden', name:'newbl', value:'newbl'}
        %input#blog-title{type: 'text'}
        %input#blog-tag{type: 'text'}
        %textarea#blog-body{type: 'text'}
        %button.button.tiny{type: 'submit'} 确定

