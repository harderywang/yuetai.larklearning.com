%script{type: 'text/template', id: 't-settings-show'}
  .row
    .large-12.columns
      %h4 设置
  .row.dashboard-content-wrap
    .large-10.columns.large-centered
      %form
        .row
          .large-2.columns
            %label.right.inline{for: 'username'} 用户名
          .large-8.columns
            %input#username{type: 'text', placeholder: 'lily', value: '{{= username }}'}
          .large-2.columns.text-right
            %span.label.secondary.round {{= level_name }}
        .row
          .large-2.columns
            %label.right.inline{for: 'email'} 邮箱
          .large-10.columns
            %input#email{type: 'text', placeholder: 'lily', value: '{{= email }}'}
        .row
          .large-2.columns
            %label.right.inline{for: 'github'} Github
          .large-10.columns
            %input#github{type: 'text', placeholder: 'lily'}
        .row
          .large-2.columns
            %label.right.inline{for: 'webchat'} 微信
          .large-10.columns
            %input#webchat{type: 'text', placeholder: 'lily'}
        .row
          .large-2.columns
            %label.right.inline{for: 'desc'} 描述
          .large-10.columns
            %textarea#desc{type: 'text', placeholder: 'lily'}
        .row
          .large-2.columns
            %label.right.inline{for: 'photo'} 头像
          .large-10.columns
            %input#photo{type: 'file'}
        .row
          .large-2.columns
          .large-10.columns
            %button.btn.tiny{type: 'submit'} 保存
