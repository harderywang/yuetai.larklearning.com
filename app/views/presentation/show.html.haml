#main-content
  #fullpage

- presentation_json = render template: "presentation/show", formats: [:json], handlers: [:jbuilder]

= content_for :js_ext do
  :javascript
    $(document).ready(function () {
      var presentations_view = new Yuetai.Views.Presentations.PresentationView(#{presentation_json});
    });
    $('.presentation-btn').addClass('active');
:css
  html, body {
    overflow: hidden;
  }
  
%script{type: 'text/template', id: 't-presentation-page'}
  .section
    .row
      .large-12.columns.medium-10.medium-centered
        {{= page.content }}
